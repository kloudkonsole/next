{
	"mod": [{
		"id": "web",
		"host": "127.0.0.1",
		"port": 1337
	},{
		"id": "timer"
	},{
		"id": "util"
	}],
	"spec": {
		"params": {
			"type": "object",
			"spec": {
				"id": "string"
			}
		},
		"query": {
			"type": "object",
			"spec": {
				"page": "number",
				"size": "number",
				"sort": "string",
				"q": "string",
				"filter": {
					"type": "array",
					"sep": "~",
					"spec": {
						"type": "object",
						"spec": {
							"include": {
								"type": "array"
							},
							"range": "string",
							"start": {
								"type": "null",
								"required": ["bool", ["range"]]
							},
							"end": {
								"type": "null",
								"required": ["bool", ["range"]]
							},
							"index": "string",
							"csv": {
								"type": "array",
								"sep": "~",
								"required": ["bool", ["index"]]
							}
						}
					}
				}
			}
		}
	},
	"routes": {
		"* * * * * *": [
			["util.log", "#hello"]
		],
		"/1.0/health": [
			["web.log", "res"],
			["util.wait", 5],
			[["web.output", "json"], "$output"]
		],
		"/1.0/user/:id": [
			["web.log", "res"],
			[["web.input", "$params", "params"], "req", "params"],
			[["web.input", "$query", "query"], "req", "query"],
			[["web.output"], "res", "params", "query"]
		]
	}
} 
