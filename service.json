{
	"mod": [{
		"id": "web",
		"mod": "./mod/web",
		"host": "127.0.0.1",
		"port": 1337
	},{
		"id": "db",
		"mod": "./mod/json_mem",
		"format": {
			"pkey": "i",
			"state": "s",
			"created_at": "cat",
			"updated_at": "uat",
			"created_by": "cby",
			"updated_by": "uby"
		}
	},{
		"id": "timer",
		"mod": "./mod/timer"
	},{
		"id": "util",
		"mod": "./mod/util"
	}],
	"rsc": {
		"users": {
			"format": {
			},
			"GET": {
				"schema": {
					"type": "object",
					"spec": {
						"name": {
							"type": "array",
							"gt": 0,
							"spec": "string"
						},
						"ccode": "number",
						"mobile": "number",
						"email": "string",
						"address": {
							"type": "array",
							"gt": 0,
							"spec": "string"
						}
					}
				}
			}
		},
		"users/id": {
		}
	},
	"spec": {
		"grouping": [["index", "csv"], ["range", "start", "end"]],
		"params": {
			"type": "object",
			"spec": {
				"id": "string"
			}
		},
		"query": {
			"type": "object",
			"spec": {
				"page": "number",
				"size": "number",
				"sort": "string",
				"q": "string",
				"filter": {
					"type": "array",
					"sep": "~",
					"spec": {
						"type": "object",
						"spec": {
							"include": {
								"type": "array"
							},
							"range": "string",
							"start": {
								"type": "null",
								"required": ["bool", ["range"]]
							},
							"end": {
								"type": "null",
								"required": ["bool", ["range"]]
							},
							"index": "string",
							"csv": {
								"type": "array",
								"sep": "~",
								"required": ["bool", ["index"]]
							}
						}
					}
				}
			}
		}
	},
	"routes": {
		"* * * * * *": [
			["util.log", "hello"]
		],
		"POST/rcs": [
		],
		"GET/rcs": [
			["web.input2", "_.params", "_.spec.param", "_.input1"],
			["web.input2", "_.url.query", "_spec.query","_.query"]
		],
		"PUT/rcs/id": [
			[]
		],
		"GET/rcs/id": [
		],
		"DELETE/rcs/id": [
		],
		"/1.0/health": [
			["web.log", "_.res"],
			["util.wait", 5],
			[["web.output", "text/plain", "text"], "hello"]
		],
		"/1.0/:rcs": [
			[["web.output"], "_.res", "_.output", "_.meta"],
			[["web.router", "@.rcs"], "$.params", "_.req", "_.res", "_.output", "_.meta"]
		],
		"/1.0/:rcs/:id": [
			[["web.output"], "_.res", "_.output", "_.meta"],
			[["web.router", "@.rcs"], "$.params", "_.req.method", "_.output", "_.meta"]
		]
	}
} 
