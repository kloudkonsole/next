{
	"mod": [{
		"id": "web",
		"host": "127.0.0.1",
		"port": 1337
	},{
		"id": "timer"
	},{
		"id": "util"
	}],
	"spec": {
		"params": {
			"type": "object",
			"spec": {
				"id": "string"
			}
		},
		"query": {
			"type": "object",
			"spec": {
				"page": "number",
				"size": "number",
				"sort": "string",
				"q": "string",
				"filter": {
					"type": "array",
					"sep": "~",
					"spec": {
						"type": "object",
						"spec": {
							"include": {
								"type": "array"
							},
							"range": "string",
							"start": {
								"type": "null",
								"required": ["bool", ["range"]]
							},
							"end": {
								"type": "null",
								"required": ["bool", ["range"]]
							},
							"index": "string",
							"csv": {
								"type": "array",
								"sep": "~",
								"required": ["bool", ["index"]]
							}
						}
					}
				}
			}
		}
	},
	"routes": {
		"* * * * * *": [
			["util.log", "hello"]
		],
		"/1.0/health": [
			["web.log", "_.res"],
			["util.wait", 5],
			[["web.output", "text/plain", "text"], "hello"]
		],
		"/1.0/user/:id": [
			["web.log", "_.res"],
			[["web.input", "$.spec.params"], "$.params", "_.params"],
			[["web.input", "$.spec.query", "$.spec.group"], "_.url.query", "_.query"],
			[["web.output"], "_.res", "_.params", "_.query"]
		]
	}
} 
